<% title "Viewing Stage #{@stage.id} : #{@stage.title}" %>

<div class="thumbnail">
<% for asset in @stages %>
<p><%= link_to image_tag (asset.data.url(:thumb)) %></p>
<p> <%= asset.title %></p>
<p><%= button_to 'Delete From Stage', item, :confirm => 'Are you sure?', :method => :delete %></p>
<% end %>


<%= link_to 'Edit', edit_stage_path(@stage) %> |
<%= link_to 'Home', assets_path %>
<%= link_to 'View Stages', stages_path %>

<%= will_paginate @stages %>

</div>




