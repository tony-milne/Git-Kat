<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title>Media Manager - <%= yield :title %></title>
    <%= stylesheet_link_tag 'application' %>
    <script src= "/javascripts/prototype.js" type="text/javascript"></script>
    <script src="/javascripts/scriptaculous.js" type="text/javascript"></script>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <div id="header_right">
          <div id="user_nav">
            <% if current_user %>
              <%= link_to "Edit Profile", edit_asset_manager_user_path(:current) %> |
              <%= link_to "Logout", logout_path %>
            <% else %>
              <%= link_to "Register", new_asset_manager_user_path %> |
              <%= link_to "Login", login_path %> |
              <%= link_to "Forgot password", new_asset_manager_password_reset_path %>
            <% end %>
          </div>
        </div>
        <div id="header_left">
          <div id="logo">
            <h2>Media Manager - <%= yield :title %></h2>
          </div>
        </div>
        <div class="clearFloat">
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          <%- end -%>
        </div>
      </div>
      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
