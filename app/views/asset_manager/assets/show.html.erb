<% title "Viewing #{@asset.title}" %>
<div id="show_left_column">
	<div id="show_pic_asset">
		<%= image_tag @asset.data.url(:large) %>
	</div>
</div>
<div id="show_right_column">
	<ul class="picAttributes">
  	<li><strong>Title: </strong><%=h @asset.title %></li>
    <li><strong>File Name: </strong><%=h @asset.data_file_name %></li>
    <li><strong>File Type: </strong><%=h @asset.data_content_type %></li>
    <li><strong>Date Created: </strong><%=h @asset.created_at %></li>
    <li><strong>Last Updated: </strong><%=h @asset.updated_at %></li>
    <% if @asset.exif? %>
     	<% @exif.each_pair { |key, value| %>
      <li><strong><%= "#{key}: " %></strong><%= "#{value}" %></li>
      <% } %>
	  <% end %>
	  <li><strong>Tags: </strong>
	  <% @asset.tags.each do |tag| %>
	    <%= tag[:content] %> 
	  <% end %>
	</ul>  
</div>

<div id="footer">
	<%= link_to 'Edit', edit_asset_manager_asset_path(@asset) %> |
  <%= link_to 'Back', asset_manager_assets_path %>
</div>
