<div class="caption">
  <% fields_for "asset[#{prefix}_caption_attributes][]", caption do |t| %>
    <div class="formRow">  
      <span class="labelCol"><%= t.label "Caption"%></span>
      <%= t.text_field :content %>
      <%= t.select(:language_id, Language.all.collect { |l| [l.language, l.id] }, {:include_blank => false}) %>
      <%= link_to_function "Remove", "this.up('.caption').remove()" %>
    </div>
  <% end %>
</div>
