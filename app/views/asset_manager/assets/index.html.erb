<% title "Home Page" %>
<div id="welcome_container">
<h3>Welcome To Your Asset Archive</h3>
  <p> In your asset archive, you can edit and delete your current assets as well as add new ones.</p>
</div>
  

  <div id="gallery_container">
	<% form_tag added_asset_manager_stages_path, :method => :put do %> 
    <% @assets.each do |asset| %>
    <div id="image_gallery">
      <div class="thumbnail">
        <%= link_to image_tag(asset.data.url(:thumb)), asset_manager_asset_path(asset) %><br />
        <%= link_to truncate(asset.title, 20, "..."), asset_manager_asset_path(asset) %><br />
        <%= link_to 'Edit', edit_asset_manager_asset_path(asset) %>
        <%= link_to 'Delete', asset_manager_asset_path(asset), :confirm => 'Are you sure?', :method => :delete %>
        <%= check_box_tag "asset_ids[]", asset.id %>
      </div>
    <% end %>
  </div>
<div class="clear">  
    <%= will_paginate @assets %>  
  
 
 <div>
    <h2> Select a Stage to Add the Assets to </h2>
    <p><%= collection_select(:stage, :stage_id, Stage.all, :id, :title, {:prompt => true}) %>
    <p><%= submit_tag "Add To Stage" %></p>
    <% end %>
  </div>
</div>



  
  <div id="local_nav">
    <ul class="localNav">
      <li><%= link_to 'New asset', new_asset_manager_asset_path %></li>
      <li><%= link_to 'New Language', asset_manager_languages_path %></li>
      <li><%= link_to "View Stages", asset_manager_stages_path %></li>
    </ul>
  </div>
</div>