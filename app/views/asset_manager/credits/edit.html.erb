<% title "Editing credit" %>

<% form_for([:asset_manager, @credit]) do |f| %>
  <%= f.error_messages %>

  <div class="formRow">
    <span class="labelCol"><%= f.label :credit %></span>
    <%= f.text_field :credit %>
  </div>
  
    <div class="formRow">
    <span class="labelCol"><%= f.label :language %></span>
    <%= f.collection_select :language_id, Language.find(:all), :id, :language, :input_blank => false %>
   </div>
   
  <div class="formRow">
    <span class="labelCol"><%= f.submit 'Update' %></span>
  </div>
<% end %>

<%= link_to 'Back', asset_manager_asset_credits_path(@credit.asset_id) %>