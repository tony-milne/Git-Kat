<% title "Listing tags for #{@asset.title}" %> 

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%=h tag.content %></td>
    <td><%= link_to 'Edit', edit_asset_manager_asset_tag_path(@asset, tag) %></td>
    <td><%= link_to 'Delete', asset_manager_asset_tag_path(@asset, tag), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_asset_manager_asset_tag_path %>
<%= link_to 'Back', asset_manager_asset_path(@asset) %>
