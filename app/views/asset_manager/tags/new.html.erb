<% title "New tag for #{@asset.title}" %> 

<% form_for([:asset_manager, @tag]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :tag %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= hidden_field_tag(:asset_id, @asset.id) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', asset_manager_asset_tags_path(@asset) %>
