<% form_tag remove_asset_from_stage_asset_manager_stage_path, :method => :put do %>
<% for asset in @assets %>
<p> <%= link_to image_tag(s3_authenticated_url asset, :thumb), asset_manager_asset_path(asset) %></p>
<p> <%= asset.title %></p>
<p> <%= check_box_tag "asset_ids[]", asset.id %>
<% end %>

<%= submit_tag "Delete From Stage" %>
<% end %>
<%= will_paginate @assets %>
<%= link_to 'Edit This Stage', edit_asset_manager_stage_path(@stage) %> |
<%= link_to 'View All Stages', asset_manager_stages_path %>
<%= link_to "Back", asset_manager_stages_path %>
