<h1>New caption</h1>

<% form_for([:asset_manager, @caption]) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :caption %><br />
    <%= f.text_field :caption %>
  </p>
  <p>
    <%= f.label :asset %><br />
    <%= hidden_field_tag(:asset_id, @asset.id) %>
  </p>
  <p>
    <%= f.label :language %><br />
    <select name="caption[language_id]">
<% @languages.each do |language| %>
<option value="<%= language.id %>"
<%= ' selected' if language.id == @caption.language_id %>>
<%= language.language %>
</option>
<% end %>
</select>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', asset_manager_captions_path %>