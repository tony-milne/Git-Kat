<% title "New caption for #{@asset.title}" %> 

<% form_for([:asset_manager, @caption]) do |f| %>

  <%= f.error_messages %>

  <div class="formRow">
    <span class="labelCol"><%= f.label :caption %></span>
    <%= f.text_field :content %>
  </div>
  

    <%= hidden_field_tag(:asset_id, @asset.id) %>
 

   <div class="formRow">
    <span class="labelCol"><%= f.label :language %></span>
    <%= f.collection_select :language_id, Language.find(:all), :id, :language, :input_blank => false %>
   </div>
  
  <div class="formRow">
    <%= f.submit 'Create' %>
  </div>
<% end %>

<%= link_to 'Back', asset_manager_asset_captions_path(@asset), :class => "lightBlue" %>
