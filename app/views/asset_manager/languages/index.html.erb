<h1>Listing languages</h1>

<table>
  <tr>
    <th>Language</th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%=h language.language %></td>
    <td><%= link_to 'Edit', edit_asset_manager_language_path(language), :class => "lightBlue" %></td>
    <td><%= link_to 'Delete', asset_manager_language_path(language), :confirm => 'Are you sure?', :method => :delete , :class => "lightBlue" %></td>

  </tr>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New language', new_asset_manager_language_path, :class => "lightBlue" %>
<%= link_to 'Back', asset_manager_assets_path, :class => "lightBlue" %>